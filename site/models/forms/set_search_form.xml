<?xml version="1.0" encoding="utf-8"?>
<!-- This form contains all of the input fields for the search box at the top of the sets and setsc pages -->
<form>
	<fieldset addfieldpath="/administrator/components/com_catalogsystem/models/fields">
		<field 
			name="sets_name" 
			type="text" 
			label="Set Name" 
			size="40" 
			class="inputbox" 
			required="false"
		></field>
		<!-- Format is YYYY-MM-DD. This will show sets with ANY usages after this date -->
		<field
			name="sets_date_after"
			type="calendar"
			label="After"
			required="false"
			size="8"
			></field>
		<!-- Format is YYYY-MM-DD. This will show sets with ANY usages before this date -->
		<field
			name="sets_date_before"
			type="calendar"
			label="Before"
			required="false"
			size="8"
			></field>
		<!-- Format is YYYY-MM-DD. This will show sets with NO usages before this date -->
		<field
			name="sets_date_notbefore"
			type="calendar"
			label="NOT Before"
			required="false"
			size="8"
			></field>
		<!-- Format is YYYY-MM-DD. This will show sets with NO usages after this date -->
		<!-- Ex: "sets that have not yet been used in 2022" would be found by putting "2022-01-01" in this field-->
		<field
			name="sets_date_notafter"
			type="calendar"
			label="NOT After"
			required="false"
			size="8"
			></field>
		
	</fieldset>
</form>

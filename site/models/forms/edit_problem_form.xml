<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="name"
            type="text"
            label="Problem Name"
            size="40"
            class="inputbox"
            required="true" />
        <field name="cattoggle" type="radio" default="0" label="" description="">
                <option value="0">Use existing Category</option>
                <option value="1">Create new Category</option>
        </field>
        <field
            name="category"
            label="Category"
            required="false"
            type="sql"
            default=""
            class="inputbox problem-header"
            query="SELECT id, name FROM com_catalogsystem_category"
            key_field="name"
            value_field="name"
            layout="joomla.form.field.list-fancy-select"
            multiple="false"
            custom="true"
			showon="cattoggle:0"/>
        <field
            name="newcategory"
            label="Input New Category"
            required="false"
            type="text"
            default=""
            class="inputbox"
            showon="cattoggle:1"/>
        <field name="sourcetoggle" type="radio" default="0" label="" description="">
                <option value="0">Use existing Source</option>
                <option value="1">Create new Source</option>
        </field>
        <field
            name="source"
            label="Source"
            required="false"
            type="sql"
            default=""
            class="inputbox problem-header"
            query="SELECT id, name FROM com_catalogsystem_source"
            key_field="name"
            value_field="name"
            layout="joomla.form.field.list-fancy-select"
            multiple="false"
            custom="true"
			showon="sourcetoggle:0"/>
        <field
            name="newsource"
            label="Input New Source"
            required="false"
            type="text"
            default=""
            class="inputbox"
            showon="sourcetoggle:1"/>
        <field name="dif"
            type="text"
            label="Difficulty"
            required="false"
            size="3"
            filter = "integer"
            class="inputbox problem-header" />
	</fieldset>
    <field name="pdfupload"
        type="file"
        label="Upload New PDF"
		labelclass="problem-header"
        description="Upload a PDF file for the problem"
        size="40"
        class="inputbox" />
    <field name="zipupload"
        type="file"
        label="Upload New ZIP"
		labelclass="problem-header"
        description="Upload a ZIP file for the problem"
        size="40"
        class="inputbox"/>
    <field
        name="add_sets"
        label="Add to Sets"
        required="false"
        type="sql"
        default=""
        class="inputbox"
        query="SELECT id, name FROM com_catalogsystem_set"
        key_field="name"
        value_field="name"
        layout="joomla.form.field.list-fancy-select"
        multiple="true"/>
    <field name="add_use"
       type = "calendar"
       label="Record Use"
       required = "false" />
    <field name="useTeam"
       type = "sql"
       label="Used By"
       required = "false" 
        default=""
        class="inputbox"
        query="SELECT id, name FROM com_catalogsystem_team"
        key_field="name"
        value_field="name"
        layout="joomla.form.field.list-fancy-select"
        multiple="false"
        custom="true"
    />
</form>

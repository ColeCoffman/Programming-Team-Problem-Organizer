<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="name"
		type="text"
		label="Problem Name"
		size="40"
		class="inputbox"
		required="true" />
	<field
			name="category"
			label="Category"
			required="false"
			type="sql"
			default=""
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_category"
			key_field="name"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
		/>
	<field
			name="source"
			label="Source"
			required="false"
			type="sql"
			default=""
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_source"
			key_field="name"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
		/>
    <field name="dif"
		type="text"
		label="Difficulty"
		required="false"
		size="3"
        filter = "integer"
		class="inputbox" />
    <field name="firstUse"
           type = "calendar"
           label="Initially Used"
           required = "false" />
	<field
			name="set"
			label="Include in Problem Sets:"
			required="false"
			type="sql"
			default=""
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_set"
			key_field="name"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			custom="true"
		/>
	<field name="pdfupload"
		type="file"
		label="Upload PDF"
		description="Upload a PDF file of the problem"
		size="40"
		class="inputbox" />
	<field name="zipupload"
		type="file"
		label="Upload ZIP"
		description="Upload a ZIP file for the problem"
		size="40"
		class="inputbox" />
</form>

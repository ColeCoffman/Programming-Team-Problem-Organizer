<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="op">
        <fieldset name="opPanel">
            <field name="desiredOp" type="radio" default="0" label="Select an Operation" description="">
                <option value="1">Create New Set</option>
                <option value="0">Record Use</option>
                <option value="2">Delete</option>
            </field>
            <field name="newSet"
				type="text" 
				label="New Set Name" 
				showon="desiredOp:1"
			/>
			<field name="newZip"
				type="text" 
				label="URL Link to zip file" 
				showon="desiredOp:1"
			/>
            <field name="useDate" 
				type="calendar" 
				label="Select Date" 
				showon="desiredOp:0"
			/>
            <field name="useTeam"
               type = "sql"
               label="Used By"
               required = "false" 
                default=""
                class="inputbox"
                query="SELECT id, name FROM com_catalogsystem_team"
                key_field="name"
                value_field="name"
                layout="joomla.form.field.list-fancy-select"
                multiple="false"
                custom="true"
                showon="desiredOp:0"
            />
        </fieldset>
    </fields>
</form>

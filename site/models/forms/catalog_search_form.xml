<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_catalogsystem/models/fields">
		<field 
			name="name" 
			type="text" 
			label="Problem Name" 
			size="40" 
			class="inputbox" 
			required="false"
		></field>
		<field
			name="category"
			label="Category"
			required="false"
			type="sql"
			default=""
			query="SELECT id, name FROM com_catalogsystem_category"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
		/>
		<field
			name="source"
			label="Source"
			required="false"
			type="sql"
			default=""
			query="SELECT id, name FROM com_catalogsystem_source"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
		/>
		<field 
			name="mindif" 
			type="text" 
			label="Min Difficulty" 
			required="false" 
			size="3" 
			filter="integer" 
			class="inputbox"
			></field>
		<field 
			name="maxdif" 
			type="text" 
			label="Max Difficulty" 
			required="false" 
			size="3" 
			filter="integer" 
			class="inputbox"
			></field>
		<field 
			name="sortby" 
			type="list" 
			default="" 
			label="Order By">
				<option value="">Id</option>
				<option value="p.name">Name</option>
				<option value="p.difficulty">Difficulty</option>
		</field>
	</fieldset>
</form>

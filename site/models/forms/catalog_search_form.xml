<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_catalogsystem/models/fields">
		<field
			name="catalog_name"
			type="text"
			label="Problem Name"
			size="40"
			hint= "Type the problem name"
			class="inputbox"
			required="false"
		></field>
		<field
			name="catalog_set"
			label="Set"
			required="false"
			type="sql"
			default=""
			hint="Type or select tags"
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_set"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
		/>
		<field
			name="catalog_category"
			label="Category"
			required="false"
			type="sql"
			hint="Type or select tags"
			default=""
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_category"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
		/>
		<field
			name="catalog_source"
			label="Source"
			required="false"
			type="sql"
			default=""
			hint="Type or select tags"
			class="inputbox"
			query="SELECT id, name FROM com_catalogsystem_source"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
		/>
		<field
			name="catalog_mindif"
			type="number"
			label="Min Difficulty"
			required="false"
			size="3"
			min="0"
			filter="integer"
			class="inputbox"
			></field>
		<field
			name="catalog_maxdif"
			type="number"
			label="Max Difficulty"
			required="false"
			size="3"
			min="0"
			filter="integer"
			class="inputbox"
			></field>
		<field
			name="catalog_date_after"
			type="calendar"
			class="catalog_date"
			label="After"
			required="false"
			size="8"
			></field>
		<field
			name="catalog_date_before"
			type="calendar"
			class="catalog_date"
			label="Before"
			required="false"
			size="8"
			></field>
		<field
			name="catalog_date_notbefore"
			type="calendar"
			label="NOT Before"
			class="catalog_date"
			required="false"
			size="8"
			></field>
		<field
			name="catalog_date_notafter"
			type="calendar"
			class="catalog_date"
			label="NOT After"
			required="false"
			size="8"
			></field>
	</fieldset>
</form>
